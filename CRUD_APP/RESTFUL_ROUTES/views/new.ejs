<% include ./partials/header %>
<div class="ui main text container segment">
    <div class="ui huge header">New Book</div>
    <form class="ui form" action="/books" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="book[title]" placeholder="title">
        </div>
        <div class="field">
            <label>Author</label>
            <input type="text" name="book[author]" placeholder="author">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="book[image]" placeholder="image">
        </div>
        <div class="field">
            <label>Book Comment</label>
            <textarea name="book[comment]"></textarea>
        </div>
        <input class="ui violet big basic button" type="submit">
    </form>
</div>
<% include ./partials/footer %>

