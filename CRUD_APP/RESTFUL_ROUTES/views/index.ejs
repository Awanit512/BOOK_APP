<% include ./partials/header %>

<div class="ui main text container">
    <div class="ui huge header">Book App</div>
    <div class="ui top  attached segment">
        <div class="ui divided items">
            <% books.forEach(function(book){ %>
                <div class="item">
                    <div class="image">
                        <img src="<%= book.image %>" >
                    </div>
                    <div class="content">
                         <a class="header" href="/books/<%= book._id %>"><%=book.title%></a>
                         <div class="meta">
                             <span><%= book.author %></span>
                         </div>
                         <div class="description">
                             <p><%- book.comment.substring(0, 100) %>...</p>
                         </div>
                         <div class="extra">
                             <a class="ui floated basic violet button" href="/books/<%= book._id %>">
                                 Read More
                                 <i class="right chevron icon"></i>
                             </a>
                         </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</div>

<% include ./partials/footer %>
